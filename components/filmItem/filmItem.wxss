.item-img{
  width: 100%;
  height: 280rpx;
  display: block;
}
.item-name{
  font-size: 22rpx;
  font-weight: bolder;
  color: #333;
  width: 180rpx;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.item-star .image{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle; 
}
.item-star .item-source,.no-comment{
  font-size: 22rpx;
  padding-left: 8rpx;
  color: #999;
  
}
.no-comment{
  height: 52rpx;
  line-height: 52rpx;
}

.addZero::after{
   content:".0"
}