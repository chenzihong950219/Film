
.film{
  width: 100%;
}
.film-type{
  background-color: white;
  margin-top: 20rpx;
}
.film .film-type:first-child{
  margin-top: 0rpx;
}
.type-title{
  padding: 26rpx 0rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.type-title text:first-child{
  border-left: 6rpx solid #42bd56;
  padding-left: 26rpx;
}

.film-list{
  width: 100%;
}


.film-item{
  width: 28%;
  display: inline-block;
  padding-left: 4%;
  vertical-align: top;
}
.film-item:last-child{
  padding-right: 4%;
}




.item-img{
  width: 100%;
  height: 280rpx;
  display: block;
}
.item-name{
  font-size: 22rpx;
  font-weight: bolder;
  color: #333;
  /* 超出的部分截断  */
  width: 180rpx;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.item-star .image{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle; 
}
.item-star .item-source,.no-comment{
  font-size: 22rpx;
  padding-left: 8rpx;
  color: #999;
  
}
.no-comment{
  height: 52rpx;
  line-height: 52rpx;
}

.addZero::after{
   content:".0"
}