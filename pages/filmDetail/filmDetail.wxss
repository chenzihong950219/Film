page{
  background-color: white;
}
.detail{
  width: 100%;
  padding:30rpx 4%;
  vertical-align: top;
}
.detail-text{
  display: inline-block;
  width: 59%;
  margin-right:5%; 
}
.item-star .star-image{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle; 
}
.item-star .item-source,.no-comment{
  font-size: 22rpx;
  padding-left: 8rpx;
  color: #999;
}
.no-comment{
  height: 52rpx;
  line-height: 52rpx;
}
.addZero::after{
   content:".0"
}
.detail-title{
  font-size: 38rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-weight: bolder;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.type{
  font-size: 24rpx;
  
}
.detail-image{
  width: 25%;
  display: inline-block;
}
.detail-image .image{
  width:100%;
  height: 240rpx;
}


.want-see{
  width: 100%;
}
.see{
  width: 50%;
  margin: 30rpx auto;
  text-align: center;
  font-size: 28rpx;
  color:#42bd56;
  border: 2rpx solid #42bd56;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
}



.left{
  width: 20%;
}
.right{
  width: 80%;
}
.introduction,.actor,.comment,.mycomment{
  padding:30rpx 4%;
}
.introduction-title,.actor-title,.comment-title,.mycomment-title{
  font-size: 24rpx;
  color: #999;
  margin-bottom:30rpx;
}
.introduction-content,.comment-detail{
  font-size: 24rpx;
  color: #333;
}


.mycomment{
  position: relative;
}
.left{
  width: 20%;
  position:absolute;
  top:80rpx;
}
.left image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;

}
.right{
  width: 80%;
  padding-left:30rpx;
}
.mycomment-text{
  border:2rpx solid #42bd56;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #333;
  margin-left: 50rpx;
}
.domycomment{
  width: 30%;
  margin: 30rpx auto;
  margin-right: 0rpx; 
  text-align: center;
  font-size: 24rpx;
  color:#42bd56;
  border: 2rpx solid #42bd56;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
}



.actor-list{
  width:100%;
  white-space: nowrap;
}
.actor-item{
  width: 200rpx;
  display: inline-block;
  padding-left: 20rpx;
  vertical-align: top;
}
.actor-img{
  width: 100%;
  height: 280rpx;
  display: block;
}
.actor-name,.actor-text{
  font-size: 22rpx;
  font-weight: bolder;
  color: #333;
  width: 180rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-align: center;
}
.actor-text{
  color: #999;
}



.comment-item{
 position: relative;
}
.comment-user{
  position: absolute;
  top:10rpx;
}
.comment-image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
}
.comment-text{
  padding-left:70rpx;
}
.comment-detail{
  padding-left:8rpx;
}